    "/api/player/career/{playerId}": {
      "get": {
        "summary": "Get first and last appearances for a player in each team",
        "description": "Returns the first and last appearance of a player in each team.",
        "parameters": [
          {
            "name": "playerId",
            "in": "path",
            "description": "ID of the player",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "firstAppearance": {
                        "type": "string",
                        "format": "date",
                        "example": "2022-01-15"
                      },
                      "lastAppearance": {
                        "type": "string",
                        "format": "date",
                        "example": "2023-05-20"
                      },
                        "player_name": {
                            "type": "string",
                            "example": "Cristiano Ronaldo"
                        },
                        "club_id": {
                            "type": "integer",
                            "example": 162
                        }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No appearances found for the specified player ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "No appearances found for the specified player ID"
